@model IEnumerable<Blogger.Models.CommentModel>
@{
    Layout = null;
}

@foreach (var model in Model)
                {
 <!-- Comment -->
<div class="media">
    <a class="pull-left" href="#">
        <img class="media-object" src="http://placehold.it/64x64" alt="">
    </a>
    <div class="media-body">
        <h4 class="media-heading">
            @Html.DisplayFor(modelItem => model.CommentedBy)
            <small>@Html.DisplayFor(modelItem => model.CommentedOn)</small>
        </h4>
        @Html.DisplayFor(modelItem => model.CommentText)
    </div>
</div>
}